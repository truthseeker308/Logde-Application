<UserControl x:Class="LodgeMinutes.UserControls.LodgeOpenClose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LodgeMinutes.UserControls"
             mc:Ignorable="d">
    <Grid>
        <TabControl x:Name="tabControl" VerticalContentAlignment="Top">
            <TabItem Header="Opening">
                <local:Opening x:Name="ucOpening" />
            </TabItem>
            <TabItem Header="Change Degrees / WMs / Labor and Refresh / Closing">
                <local:Closing x:Name="ucClose" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
