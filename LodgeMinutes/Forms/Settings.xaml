<Window x:Class="LodgeMinutes.Forms.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LodgeMinutes.Forms"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Settings" Width="440" Height="445" Icon="/LodgeMinutes;component/LodgeMinutes.ico" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ThreeDBorderWindow" BorderBrush="#FFC9C9F0" Loaded="Window_Loaded">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <ScrollViewer HorizontalScrollBarVisibility="Visible">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Lodge Full Name</Label>
            <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Margin="5,0,0,0" Name="textboxFullName" MaxLength="50"></TextBox>

            <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Lodge Abreviated Name</Label>
            <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Margin="5,0,0,0" MaxLength="50" Name="textboxAbbreviatedName" ></TextBox>

            <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Total Meeting Current Count</Label>
            <xctk:IntegerUpDown Name="myUpDownControl" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0" HorizontalAlignment="Left" Width="150" Maximum="1000" Minimum="1" />

            <Label Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Regular Meeting Current Count</Label>
            <xctk:IntegerUpDown Name="myUpDownControl2" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0" HorizontalAlignment="Left" Width="150" Minimum="1" Maximum="1000" />

            <Label Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Logo/Seal</Label>
            <Image Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" />

            <Label Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Worshipful Master</Label>
            <TextBox Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="150" Margin="5,0,0,0" MaxLength="50"></TextBox>

            <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Senior Warden</Label>
            <TextBox Grid.Row="6" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="150" Margin="5,0,0,0" MaxLength="50"></TextBox>

            <Label Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Junior Warden</Label>
            <TextBox Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="150" Margin="5,0,0,0" MaxLength="50"></TextBox>

            <Label Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Usual Lodge Meeting Locations</Label>
            <TextBox Grid.Row="8" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="100" Margin="5,0,0,0" MaxLength="50"></TextBox>

            <Label Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Number of Regular Meetings per Month</Label>
            <xctk:IntegerUpDown Name="myUpDownContro3" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0" HorizontalAlignment="Left" Width="150" Maximum="30" Minimum="1" />

            <Label Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" FontWeight="Bold">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-8.578"/>
                        <RotateTransform/>
                        <TranslateTransform X="1.961"/>
                    </TransformGroup>
                </Label.RenderTransform> Usual Months 'Dark'
            </Label>
            <xctk:CheckComboBox Grid.Row="10" Grid.Column="1"  x:Name="_combo" 
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Center" Width="150" Margin="5,0,0,0">
                <ComboBoxItem>Janurary</ComboBoxItem>
                <ComboBoxItem>Febuary</ComboBoxItem>
                <ComboBoxItem>March</ComboBoxItem>
                <ComboBoxItem>April</ComboBoxItem>
                <ComboBoxItem>May</ComboBoxItem>
                <ComboBoxItem>June</ComboBoxItem>
                <ComboBoxItem>July</ComboBoxItem>
                <ComboBoxItem>August</ComboBoxItem>
                <ComboBoxItem>September</ComboBoxItem>
                <ComboBoxItem>October</ComboBoxItem>
                <ComboBoxItem>November</ComboBoxItem>
                <ComboBoxItem>December</ComboBoxItem>
            </xctk:CheckComboBox>

            <Label Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">12/24 Hour Time</Label>
            <ComboBox Grid.Row="11" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="150" Margin="5,0,0,0">
                <ComboBoxItem>12 Hour</ComboBoxItem>
                <ComboBoxItem>24Hour</ComboBoxItem>
            </ComboBox>

            <Label Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Officer Installation Month</Label>
            <DatePicker Grid.Row="12" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Left" Width="150" Name="datePickerInstallationMonth" Margin="5,0,0,0"/>

            <Label Grid.Row="13" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" FontWeight="Bold">Remember Minute Dates</Label>
            <CheckBox Grid.Row="13" Grid.Column="1" VerticalAlignment="Center"  HorizontalAlignment="Center" Name="checkboxRememberMinutes"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="14" Grid.Column="1">
                <Button Width="75">Save</Button>
                <Button Width="75" Margin="5,0">Cancel</Button>
            </StackPanel>


        </Grid>
    </ScrollViewer>
</Window>
